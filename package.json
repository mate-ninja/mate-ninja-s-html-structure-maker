{
  "name": "mate-ninja-s-tweaks",
  "displayName": "mate_ninja's tweaks",
  "description": "An extension that adds a few useful commands to VS Code while in school",
  "version": "0.1.1",
  "icon": "assets/icon/icon.png",
  "publisher": "mateninja",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mate-ninja/mate-ninja-s-html-structure-maker.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mate-ninja-s-tweaks.generateHtmlStructure",
        "title": "Generate an HTML file structure"
      },
      {
        "command": "mate-ninja-s-tweaks.openPastebin",
        "title": "Open Pastebin Link"
      } 
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mate-ninja-s-tweaks.generateHtmlStructure",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mate-ninja-s-tweaks.openPastebin",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "mate_ninja's Tweaks settings",
      "properties": {
        "mateninjasTweaks.htmlLang": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "PL-pl"
          ],
          "description": "Lang property in generated html file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
